\newcommand{\neo@colors@dark}{
  \setbeamercolor{normal text}{%
    fg=nWhite,
    bg=nBlack
  }
  \setbeamercolor{normal item}{%
    fg=nWhite,
    bg=nDarkBlue
  }
  \usebeamercolor[fg]{normal text}
}
\newcommand{\neo@colors@light}{
  \setbeamercolor{normal text}{%
    fg=nBlack,
    bg=nWhite
  }
  \setbeamercolor{normal item}{%
    fg=nDarkBlue,
    bg=nWhite
  }
}
\newcommand{\neo@colors@white}{
  \definecolor{nWhite}{RGB}{255,255,255}
  \neo@colors@light
}
